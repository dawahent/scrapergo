{
    "manifest_version": 2,
    "name"            : "Scrapper Go",
    "description"     : "well organized data fetcher",
    "short_name"      : "SC",
    "version"         : "0.1",
   
    "browser_action": {
      "default_popup": "index.html"
    },

  
    "permissions": [
      "tabs",
      "<all_urls>",
      "activeTab",
      "storage"
    ],
  
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
  
  }
  